<div class="col-md-9 col-lg-6 col-xl-5">
  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
    class="img-fluid" alt="Sample image">
</div> 
<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="divider d-flex align-items-center my-4">
      <h2 class="text-center fw-bold mx-3 mb-0">Forgot your password?</h2>
    </div>

    <div class="form-outline mb-4">
      <%= f.text_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Enter your email address" %>
    </div>
    <div class="text-center text-lg-start mt-4 pt-2">
      <%= f.submit "Send me reset mail", class: "btn btn-primary btn-lg",
        html: {style: "padding-left: 2.5rem; padding-right: 2.5rem;"} %>
      <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?
        <%= link_to "Register", new_registration_path(resource_name), class: "link-danger" %>
      </p>
    </div>
  <% end %>
</div>

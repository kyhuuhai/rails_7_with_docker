<div class="col-md-9 col-lg-6 col-xl-5">
  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
    class="img-fluid" alt="Sample image">
</div> 
<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="divider d-flex align-items-center my-4">
      <h1 class="text-center fw-bold mx-3 mb-0">Login</h1>
    </div>
  
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-outline mb-4">
      <%= f.text_field :email, autofocus: true, class: "form-control form-control-lg", placeholder: "Enter a valid email address" %>
      <label class="form-label" for="form3Example3">Email address</label>
    </div>

    <div class="form-outline mb-4">
      <%= f.password_field :password, autofocus: true, class: "form-control form-control-lg", placeholder: "Enter Password" %>
      <label class="form-label" for="form3Example3">Password</label>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <!-- Checkbox -->
      <div class="form-check mb-0">
        <%= f.check_box :remember_me, class: "form-check-input me-2", id: "form2Example3" %>
        <label class="form-check-label" for="form2Example3">
          Remember me
        </label>
      </div>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-body" %>
    </div>

    <div class="text-center text-lg-start mt-4 pt-2">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg",
        html: {style: "padding-left: 2.5rem; padding-right: 2.5rem;"} %>
      <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account?
        <%= link_to "Register", new_registration_path(resource_name), class: "link-danger" %>
      </p>
    </div>
  <% end %>
</div>
